<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ProgressBar
            android:id="@+id/messageSentProgressBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_weight="0.25"/>

        <ImageView
            android:id="@+id/messageSentImageView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:indeterminate="true"
            android:layout_weight="0.25" />

        <TextView
            android:id="@+id/messageSentText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:layout_gravity="center"
            tools:text="Message Sent"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ProgressBar
            android:id="@+id/messageDeliveredProgressBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_weight="0.25"/>

        <ImageView
            android:id="@+id/messageDeliveredImageView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:indeterminate="true"
            android:layout_weight="0.25" />

        <TextView
            android:id="@+id/messageDeliveredText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:layout_gravity="center"
            tools:text="Message Delivered"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ProgressBar
            android:id="@+id/responseReceivedProgressBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_weight="0.25"/>

        <ImageView
            android:id="@+id/responseReceivedImageView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:indeterminate="true"
            android:layout_weight="0.25" />

        <TextView
            android:id="@+id/responseReceivedText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:layout_gravity="center"
            tools:text="Reply Received"/>

    </LinearLayout>

</LinearLayout>