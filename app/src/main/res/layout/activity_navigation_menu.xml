<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.SubActivities.NavigationMenuActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/basketCard"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/listCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/basketImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_basket" />

                <TextView
                    android:id="@+id/basketText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.2"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="View Basket" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/listCard"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@+id/basketCard"
            app:layout_constraintBottom_toTopOf="@+id/vlcCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/listImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_shopping_list" />

                <TextView
                    android:id="@+id/listText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.2"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="View Shopping List" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/vlcCard"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@+id/listCard"
            app:layout_constraintBottom_toTopOf="@+id/offersCard">

            <LinearLayout
                android:id="@+id/vlcCardLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/vlcImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_vlc_location" />

                <TextView
                    android:id="@+id/vlcText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.2"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="View Location" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/offersCard"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@+id/vlcCard"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/offersImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_offers" />

                <TextView
                    android:id="@+id/offersText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.2"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="View Offers" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

</layout>