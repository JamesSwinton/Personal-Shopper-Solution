        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <!-- Header -->
        <include
            android:id="@+id/headerLayout"
            layout="@layout/layout_header_bar_no_help" />

        <FrameLayout
