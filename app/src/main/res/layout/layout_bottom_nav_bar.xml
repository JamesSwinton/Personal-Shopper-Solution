<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="HardcodedText">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/basketLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.25"
            android:gravity="center">

            <TextView
                android:id="@+id/basketText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Basket"
                android:drawableTop="@drawable/ic_basket"
                android:drawablePadding="7dp"  />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shoppingListLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.25"
            android:gravity="center">

            <TextView
                android:id="@+id/shoppingListText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="List"
                android:drawableTop="@drawable/ic_shopping_list"
                android:drawablePadding="7dp"  />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vlcLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.25"
            android:gravity="center">

            <TextView
                android:id="@+id/vlcText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Location"
                android:drawableTop="@drawable/ic_vlc_location"
                android:drawablePadding="7dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/offersLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.25"
            android:gravity="center">

            <TextView
                android:id="@+id/offersText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Offers"
                android:drawableTop="@drawable/ic_offers"
                android:drawablePadding="7dp" />

        </LinearLayout>

    </LinearLayout>
</layout>